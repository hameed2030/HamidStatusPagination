<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.abuleath.whatsapp_status">

    <uses-permission android:name="android.permission.INTERNET" />
    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher_foreground_logo"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_logo_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        android:name="com.abuleath.whatsapp_status.GlobalVariable">
        <!--Admob-->
        <meta-data
            android:name="com.google.android.gms.ads.APPLICATION_ID"
            android:value="@string/AdmobID"/>
        <!--Admob-->
        <activity
            android:name="com.abuleath.whatsapp_status.MainActivity"
            android:label="@string/app_name"
            android:configChanges="orientation|screenSize|keyboardHidden"
            android:theme="@style/AppTheme.NoActionBar">
        </activity>
        <activity
            android:name="com.abuleath.whatsapp_status.navBarClass.Favorites"
            android:label="@string/title_activity_favorite"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name="com.abuleath.whatsapp_status.navBarClass.Categories"
            android:label="@string/categories"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".Splash_Activity"
            android:theme="@style/AppTheme.NoActionBar"
            >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.abuleath.whatsapp_status.internet.Server"
            >
        </activity>
    </application>

</manifest>
